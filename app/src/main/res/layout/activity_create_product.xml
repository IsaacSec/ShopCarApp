<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isaac.shopcar.CreateProduct">

    <EditText
        android:id="@+id/create_product_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/create_product_iv_name"
        app:layout_constraintTop_toBottomOf="@+id/create_product_tv_name" />

    <EditText
        android:id="@+id/create_product_et_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/create_product_tv_price"
        app:layout_constraintLeft_toRightOf="@+id/create_product_iv_price"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/create_product_tv_price"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:text="Product Price"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="@+id/create_product_iv_price"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/create_product_et_name" />

    <TextView
        android:id="@+id/create_product_tv_name"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:text="Product Name"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="@+id/create_product_iv_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp" />

    <ImageView
        android:id="@+id/create_product_iv_name"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="48dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product_icon" />

    <ImageView
        android:id="@+id/create_product_iv_price"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="56dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_product_iv_name"
        app:srcCompat="@drawable/coin_icon" />

    <Button
        android:id="@+id/create_product_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="72dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/colorAccent"
        android:text="CANCEL"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/create_product_btn_save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_product_et_price" />

    <Button
        android:id="@+id/create_product_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/create_product_et_price"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
